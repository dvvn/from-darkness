<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0"
		 xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<PropertyGroup Label="Globals">
		<ImGuiDir>$(GitClonedProjects)\ocornut\imgui</ImGuiDir>
	</PropertyGroup>

	<ItemDefinitionGroup>
		<ClCompile>
			<PreprocessorDefinitions>
				IMGUI_USER_CONFIG=&lt;imgui_user_config.h&gt;;
				%(PreprocessorDefinitions)
			</PreprocessorDefinitions>
			<AdditionalIncludeDirectories>
				$(SolutionDir)\deps\imgui;
				$(GitClonedProjects)\nothings\stb;
				$(ImGuiDir);
				$(ImGuiDir)\backends;
				$(ImGuiDir)\misc\cpp;
				%(AdditionalIncludeDirectories)
			</AdditionalIncludeDirectories>
		</ClCompile>
	</ItemDefinitionGroup>

</Project>